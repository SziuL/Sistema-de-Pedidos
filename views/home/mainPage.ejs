<%- include('../layouts/_black') %>

<h1>Bem-vindo, <%= usuario.nome %></h1>
<p>Tipo: <%= usuario.tipo %></p>

<!-- Menu comum -->
<ul>
  <li><a href="/home">Home</a></li>
  <li><a href="/produtos">Produtos</a></li>
</ul>

<% if (usuario.tipo === "funcionario") { %>
<!-- Exibe a opção de solicitar acesso admin apenas para funcionários -->
<h2>Solicitar acesso de administrador</h2>
<form action="/funcionario/solicitar-admin" method="POST">
  <label for="matricula">Matrícula:</label>
  <input type="text" id="matricula" name="matricula" required />
  <br />
  <label for="senha">Senha:</label>
  <input type="password" id="senha" name="senha" required />
  <br />
  <button type="submit">Solicitar acesso</button>
</form>
<% } %> <%- include('../defaults/_bottom') %>
